<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>org.annotatorplus.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/annotatorplus/greet</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>annotator</servlet-name>
  	<servlet-class>org.annotatorplus.server.AnnotatorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>annotator</servlet-name>
  	<url-pattern>/annotator</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>ibc_annotator</servlet-name>
  	<servlet-class>org.annotatorplus.server.IBCAnnotatorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ibc_annotator</servlet-name>
  	<url-pattern>/ibc_annotator</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>sifr_annotator</servlet-name>
  	<servlet-class>org.annotatorplus.server.SIFRAnnotatorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>sifr_annotator</servlet-name>
  	<url-pattern>/sifr_annotator</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>AnnotatorPlus.html</welcome-file>
  </welcome-file-list>

</web-app>
